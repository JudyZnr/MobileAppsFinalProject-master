<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/edit_vegename"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert"
            android:id="@+id/insert_btn"
            android:onClick="fn_insert"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/delete_btn"
            android:onClick="fn_delete"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Place"
            android:id="@+id/jumpMarket_btn"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/farmerPhoto"
            android:src ="@drawable/farmer"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="47dp" />

        <TextView
            android:id="@+id/farmerAddress"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/farmerPhoto"
            android:layout_alignLeft="@+id/farmerPhone"
            android:layout_alignStart="@+id/farmerPhone"
            android:text="farmerAddress"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/farmerPhone"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="farmerPhone"
            android:textSize="10dp"
            android:layout_below="@+id/farmerName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/farmerName"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/farmerPhoto"
            android:layout_marginTop="0dp"
            android:text="farmerName"
            android:textSize="10dp"
            android:layout_alignLeft="@+id/farmerPhone"
            android:layout_alignStart="@+id/farmerPhone" />


    </RelativeLayout>


    <ListView
        android:id="@+id/vegeList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>