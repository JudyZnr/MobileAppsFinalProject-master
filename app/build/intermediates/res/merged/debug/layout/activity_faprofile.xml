<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/farmerPhoto"
        android:src ="@drawable/farmer"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="47dp" />


    <TextView
        android:id="@+id/farmerPhone"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="farmerPhone"
        android:textSize="20dp"
        android:layout_below="@+id/farmerName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/farmerName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/farmerPhoto"
        android:layout_marginTop="0dp"
        android:text="farmerName"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/farmerPhone"
        android:layout_alignStart="@+id/farmerPhone" />


</RelativeLayout>